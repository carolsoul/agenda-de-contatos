CREATE DATABASE agenda;

CREATE TABLE Contatos (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    telefone VARCHAR(20) NOT NULL,
    email VARCHAR(100) NOT NULL
);

INSERT INTO Contatos (nome, telefone, email) 
VALUES ('Ana', '123647589', 'ana@gmail.com');
INSERT INTO Contatos (nome, telefone, email) 
VALUES ('Carol', '123645549', 'carol@gmail.com');
INSERT INTO Contatos (nome, telefone, email) 
VALUES ('Bia', '123877229', 'bia@gmail.com');

SELECT * FROM Contatos;

UPDATE Contatos
SET nome = 'Carolina', telefone = '987654321', email = 'carolina@exemplo.com' WHERE id = 2;

DELETE FROM Contatos WHERE id = 3;

SELECT * FROM Contatos
WHERE nome LIKE '%ana%';

SELECT * FROM Contatos
WHERE telefone LIKE '%123%';

SELECT * FROM Contatos
WHERE email LIKE '%email%';
